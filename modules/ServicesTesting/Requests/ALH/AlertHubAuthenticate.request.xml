<requestTemplate>
  <type>REST</type>
  <url>{{#AlertHubRestServiceURL}}</url>
  <path>/authentication/v1.0/client</path>
  <method>POST</method>
  <headers>
    <header>
      <name>Content-Type</name>
      <value>application/json</value>
    </header>
  </headers>
  <body>
    {
      "client_id": "{{AlertHubClientId}}",
      "client_secret": "{{AlertHubSecret}}",
      "grant_type": "client_credentials",
      "scope": "organization:{{AlertHubOrgId}},user:{{AlertHubUser}}"
      }
  </body>
  <responseActions>
    <action>
      <path>access_token</path>
      <display>true</display>
      <globalVariableName>access_token</globalVariableName>
    </action>
    <action>
      <path>token_type</path>
      <display>true</display>
      <globalVariableName>token_type</globalVariableName>
    </action>
  </responseActions>
</requestTemplate>