<requestTemplate>
  <type>SOAP</type>
  <url>{{#PostManSoapContinentsServiceURL}}</url>
  <path>/websamples.countryinfo/CountryInfoService.wso</path>
  <method>POST</method>
  <headers>
    <header>
      <name>Content-Type</name>
      <value>text/xml; charset=utf-8</value>
    </header>
  </headers>
  <body>
    <soap12:Envelope xmlns:soap12="http://www.w3.org/2003/05/soap-envelope">
      <soap12:Body>
        <ListOfContinentsByName xmlns="http://www.oorsprong.org/websamples.countryinfo">
        </ListOfContinentsByName>
      </soap12:Body>
    </soap12:Envelope>
  </body>
  <responseActions>
    <action>
      <path>ListOfContinentsByNameResponse.ListOfContinentsByNameResult.tContinent[3].sName</path>
      <display>true</display>
      <globalVariableName>CapitalCity</globalVariableName>
    </action>
    <action>
      <path>ListOfContinentsByNameResponse.ListOfContinentsByNameResult.tContinent</path>
      <display>true</display>
    </action>
  </responseActions>
</requestTemplate>